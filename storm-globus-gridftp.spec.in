%define name         @PACKAGE@
%define version      @VERSION@
%define release      @STORM_GLOBUS_GRIDFTP_RELEASE_NUMBER@
%define flavor       @GLOBUS_NOTHR_FLAVOR@
%define builddir     @RPM_BUILD_DIR@/build-%{name}-%{version}
%define globusdir    @GLOBUS_LOCATION@
%define libtype      @LIBTYPE@
#%define prefix       @prefix@

Summary:        GridFTP2 DSI for StoRM
Name:           %{name}
Version:        %{version}
Release:        %{release}
#Vendor:         
#Copyright:
License:        Apache
URL:            http://grid-it.cnaf.infn.it/storm
Source:         @PACKAGE@-%{version}.tar.gz
Group:          Application/gridftp
AutoReqProv:    no
BuildRoot:      %{builddir}
Packager:       Elisabetta Ronchieri elisabetta.ronchieri@cnaf.infn.it
Prefix:         /opt/storm/gridftp

%description
GridFTP2 DSI for StoRM. Calculates checksum on the fly.

%package %{flavor}
Summary: GridFTP2 DSI for StoRM for %{flavor}
Group: Application/gridftp

%description %{flavor}
GridFTP2 DSI for StoRM. Calculates checksum on the fly.

%prep

%setup -n @PACKAGE@-%{version}

%build
./bootstrap
./configure --prefix=%{prefix} --with-globus-prefix=%{globusdir} --with-globus-nothr-flavor=%{flavor}
make

%install
if [ -d $RPM_BUILD_ROOT ]; then rm -rf $RPM_BUILD_ROOT; fi
mkdir -p $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT/etc/init.d 
mv -f $RPM_BUILD_ROOT/%{prefix}/etc/init.d/globus-gridftp-storm $RPM_BUILD_ROOT/etc/init.d
rm -f $RPM_BUILD_ROOT/%{prefix}/%{libtype}/libglobus-gridftp-server-StoRM.la

%clean
rm -rf $RPM_BUILD_ROOT

%files %{flavor}
%defattr(755,root,root)
/etc/init.d/globus-gridftp-storm
%defattr(-,root,root)
%{prefix}/%{libtype}/libglobus-gridftp-server-StoRM.a
%{prefix}/%{libtype}/libglobus-gridftp-server-StoRM.so
%{prefix}/%{libtype}/libglobus-gridftp-server-StoRM.so.0
%{prefix}/%{libtype}/libglobus-gridftp-server-StoRM.so.0.0.0
%doc %{prefix}/share/doc/%{name}-%{version}/LICENSE

%changelog
* Fri Jun 11 2010 Elisabetta Roncheiri
- Changed the structure of the component
- Adopted autotool
- Introduced checks for architecture and location of rpm dir
